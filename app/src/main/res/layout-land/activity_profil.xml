                        android:textColor="#FFFF"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Row for NISN -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
